{% extends 'AppBundle:Layout:base.html.twig' %}

{% block links %}
    {{ parent() }}
    <link rel="import" href="/bower_components/core-drawer-panel/core-drawer-panel.html">
    <link rel="import" href="/bower_components/core-header-panel/core-header-panel.html">
    <link rel="import" href="/bower_components/core-toolbar/core-toolbar.html">
    <link rel="import" href="/bower_components/core-menu/core-menu.html">
    <link rel="import" href="/bower_components/paper-item/paper-item.html">
    <link rel="import" href="/bower_components/core-icon/core-icon.html">
    <link rel="import" href="/bower_components/core-icons/core-icons.html">
{% endblock links %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        core-toolbar {
            background: #0059ff;
            color: white;
        }

        #main-menu core-icon {
            margin-right: 0.5em;
        }

        #main-menu a:link,
        #main-menu a:visited {
            color: inherit;
            text-decoration: none;
            margin: -0.9em -1em;
            padding: 0.9em 1em;
        }

        [drawer] {
            background-color: #fff;
        }
    </style>
{% endblock stylesheets %}

{% block body %}
    {% import 'Nemo64PolymerBundle::common.html.twig' as polymer %}

    <core-drawer-panel>

        <core-header-panel drawer mode="seamed">
            <core-toolbar>
                <div flex>Management</div>
            </core-toolbar>

            <core-menu selected="{{ polymer.var('page') }}" id="main-menu">
                <paper-item hash="contacts">
                    <a href="{{ path('contacts') }}" layout horizontal center>
                        <core-icon icon="assignment-ind"></core-icon>
                        Personen
                    </a>
                </paper-item>
                <paper-item hash="companies">
                    <a href="{{ path('companies') }}" layout horizontal center>
                        <core-icon icon="store"></core-icon>
                        Firmen
                    </a>
                </paper-item>
                <hr/>
                <paper-item hash="settings">
                    <core-icon icon="settings"></core-icon>
                    Einstellungen
                </paper-item>
            </core-menu>
        </core-header-panel>

        <div main>
            {% block content %}{% endblock content %}
        </div>

    </core-drawer-panel>
{% endblock body %}