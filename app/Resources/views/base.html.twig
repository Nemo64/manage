{%- spaceless %}
    <!DOCTYPE html>
    <html lang="{{ app.request.locale }}">
        <head>
            <meta charset="UTF-8"/>
            {% block head %}{% endblock head %}
            <title>{% block title %}Welcome!{% endblock %}</title>
            {% block stylesheets %}{% endblock %}
            {% block links %}{% endblock links %}
        </head>
        <body>
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </body>
    </html>
{% endspaceless -%}